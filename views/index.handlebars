<h1>Eat Da Burger!</h1>


<ul>
  {{#each burgers}}
   
    {{#unless devoured}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
      <button data-id="{{this.id}}" class="devburger">Devour!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <button data-id="{{this.id}}" class="devburger">Devour</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Add a Burger</label>
    <input type="text" id="ca" name="name">
  </div>

  
  <button type="submit">Submit</button>
</form>
